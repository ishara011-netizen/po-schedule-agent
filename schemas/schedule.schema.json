{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SchedulePlan",
  "type": "object",
  "required": ["job", "items", "feasible", "notes"],
  "properties": {
    "job": { "type": "string", "description": "Project or PO identifier" },
    "feasible": { "type": "boolean", "description": "True if all due dates can be met under capacity" },
    "items": {
      "type": "array",
      "description": "Per-PO schedule rows",
      "items": {
        "type": "object",
        "required": ["po_id", "weight_tonnes", "due_date", "start_week", "end_week"],
        "properties": {
          "po_id": { "type": "string" },
          "weight_tonnes": { "type": "number", "minimum": 0 },
          "due_date": { "type": "string", "format": "date", "description": "YYYY-MM-DD" },
          "start_week": { "type": "string", "pattern": "^\\d{4}-W\\d{2}$", "description": "ISO week e.g., 2025-W40" },
          "end_week": { "type": "string", "pattern": "^\\d{4}-W\\d{2}$" }
        }
      }
    },
    "notes": { "type": "array", "items": { "type": "string" }, "description": "Reasons, warnings, or missing info" }
  }
}
